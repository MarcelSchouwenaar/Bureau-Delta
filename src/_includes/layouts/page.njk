---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# The About page uses this template and you can customize / use it for any new pages you add #}
<style>
  #header{
    position: relative;
  }
  #page-content{
    display: flex;
    justify-content: center;
    align-items: center;
    height: calc(100vh - var(--menu-height));]
    width: 100vw;
    padding: var(--jaaps-padding);
    text-align: center;
  }
  #page-content div{
    max-width: 600px;
  }
  #page-delta,
  #page-bureau{
    pointer-events: none;
    position: fixed;
    top: 5vh;
    left: 0;
    background-image: url("/public/images/logo-a.svg");
    background-repeat: no-repeat;
    background-size: auto 100%;;
    height: 25vw;
    width: 20vw;
    background-position: right center;
  }
  #page-delta{
    top: auto;
    left: auto;
    bottom: 5vh;
    width: 20vw;
    right: 0;
    background-image: url("/public/images/logo-b.svg");
    background-position: left center;
  }
  @media only screen and (max-width: 960px) {
    #page-delta,
    #page-bureau{
      display: none;
    }
  }

</style>


<div id="page-content">
  <div>
     {{ content | safe }}
  </div>
</div>
<div id="page-bureau"></div>
<div id="page-delta"></div>